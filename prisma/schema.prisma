// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id             Int       @id @default(autoincrement())
  phoneNumber    String?   @map("phone_number")
  email          String?
  linkedId       Int?      @map("linked_id")
  linkPrecedence String    @map("link_precedence") // "primary" | "secondary"
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  deletedAt      DateTime? @map("deleted_at")

  // Self-referential relation for linking contacts
  linkedContact Contact? @relation("ContactLink", fields: [linkedId], references: [id])
  linkedBy      Contact[] @relation("ContactLink")

  // Indexes for better query performance
  @@index([email])
  @@index([phoneNumber])
  @@index([linkedId])
  @@index([linkPrecedence])
  @@index([createdAt])
  @@map("contacts")
} 